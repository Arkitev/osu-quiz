<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameModeActivity">

    <TextView
        android:id="@+id/textViewChooseYourGameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Choose your game mode!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btStandard"
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="osu!"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseYourGameMode" />

    <Button
        android:id="@+id/btMania"
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="osu!mania"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btStandard" />

    <Button
        android:id="@+id/btTaiko"
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="osu!taiko"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btMania" />

    <Button
        android:id="@+id/btCtb"
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="osu!catch"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTaiko" />

</android.support.constraint.ConstraintLayout>